{% extends "layout.html.twig" %}

{% block title %} QuoteDico - Home {% endblock %}

{% block jumbotron %}
<section class="jumbotron">

  <div class="container">
      <div class="col-md-8">
          <p>Construisons ensemble le recueil de nos citations favorites</p>
          <p>simples et memorables</p>
      </div>

    <div class="col-md-4">
        <h3>Formulaire ici</h3>
    </div>

    <div class="col-xs-12 text-center" id="statistic">
        <h2>
            {{ quote_total }}
            <a href="/quotes" title="Liste des citations">citations</a>,
            {{ author_total }} auteurs, et ca continue ...
        </h2>
        <p> <small> grace aux contributions de nombreux
                <a href="/contributors">volontaires</a>
                <!--pour qui nous sommes tres reconnaissant-->
            </small>
        </p>
    </div>
  </div>
</section>

{% endblock %}

{% block content %}

   {% for quote in quotes %}
    <p>
    <blockquote>{{ quote.summary }}<br>
        <small>
          <a class="" href="/author/{{ quote.author.id }}">
            {{ quote.author.fullName }}
          </a>
        </small>
        <!--p>Ajout√© le {{ quote.date | date('d/m/Y') }} dans la categorie
         {#{ quote.theme }#}
         </p-->
      </blockquote>
    </p>
    {% endfor %}

{% endblock %}

{% block tags %}
  {% for category in categories %}
    <a href="#" title="Liste des citations de la categorie {{ category.name }}">{{ category.name }}</a>,
  {% endfor %}
{% endblock %}
