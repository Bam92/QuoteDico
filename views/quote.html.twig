{% extends "layout.html.twig" %}

{% block title %} QuoteDico - Home {% endblock %}

{% block hea %}
  <p>QuoteDico
   <p></p>
{% endblock %}

{% block content %}

{% for quote in quotes %}

<article>
    <p>
    <blockquote>{{ quote.summary }}<br>
        <small>
          <a class="" href="/author/{{ quote.author.id }}">
            {{ quote.author.fullName }}
          </a>
        </small>
        <p>Ajout√© le {{ quote.date | date('d/m/Y') }} dans la categorie
         {{ quote.theme }}
      </blockquote>
    </p>
</article>

{% endfor %}
{% endblock %}

{% block tags %}
  {% for category in categories %}
    {{ category.name }}
  {% endfor %}
{% endblock %}
