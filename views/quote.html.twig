{% extends "layout.html.twig" %}

{% block title %} QuoteDico - Home {% endblock %}

{% block hea %}
  <p>QuoteDico
   <p>receuil de citations libre que chacun peut ameliorer</p>
{% endblock %}

{% block content %}

{% for quote in quotes %}

<article>
    <p>
    <blockquote>{{ quote.summary }}  
        <small>
          <a class="" href="/author/{{ quote.author.id }}">
          {{ quote.author.fName }} {{ quote.author.mName }}
          {{ quote.author.lName }}
          </a>
        </small>
        <p>Ajout√© le {{ quote.date | date('d/m/Y') }} dans la categorie
         {{ quote.theme }}
      </blockquote>
    </p>
</article>

{% endfor %}
{% endblock %}
